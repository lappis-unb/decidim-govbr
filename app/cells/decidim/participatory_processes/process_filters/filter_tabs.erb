<div class="order-by__tabs ml-s inline-filters">
  <% if should_show_tabs? %>
  <div id="inline-state-filter-sort" class="dropdown-pane" data-position="bottom" data-alignment="right" data-dropdown data-auto-focus="true">
  <ul class="list-reset">
    <%= explanation %>
    <span class="muted mr-xs"><%= t("decidim.participatory_processes.participatory_processes.filters.see") %><br></span>
    <% other_filters_with_value.each do |filter| %>
    <li>
      <%= link_to filter_link(filter), remote: true, class: "order-by__tab" do %>
          <%= filter_name(filter) %>
        <%= process_count_by_filter[filter] %>
      <% end %>
    </li>
    <% end %>
  </ul>
  </div>
  <label>
    <span>Filtrar por estado</span>
    <button id="button-text" class="type-filter-text" data-toggle="inline-state-filter-sort"><%= filter_name(current_filter) %></button>
  </label>
  <% else %>
    <%= explanation %>
  <% end %>
</div>
