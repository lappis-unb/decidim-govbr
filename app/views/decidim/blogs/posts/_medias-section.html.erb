<div class="social-container <% if not local_assigns[:post_date].present? %> align-end <% end %>">
  <% if local_assigns[:post_date].present? %>
      <div class="date-post">
        <label><%=t("decidim.blogs.posts.show.published_at")%>: <%= post_date.strftime("%d/%m/%Y %Hh%M") %><label>
        <label><%=t("decidim.blogs.posts.show.updated_at")%>: <%= update_date.strftime("%d/%m/%Y %Hh%M") %></label>
      </div>
      <% end %>
      <div class="social-links">
        <% if not browser.mobile? %>
          <label><%=t("decidim.blogs.social_medias.share")%></label> 
        <% end %>
        <a href="http://www.facebook.com/sharer.php?u=<%= request.original_url %>" title="Facebook">
          <span aria-hidden="true" class="fab fa-facebook-f fa-md"></span>
          <span class="sr-only"><%=t("decidim.blogs.social_medias.face_share")%></span>
        </a>
        <a href="https://twitter.com/share?text=Not%C3%ADcias&amp;url=https://www.gov.br/secretariageral/resolveuid/1460a8239e394c77aee14a9e75f3c0f0" title="Twitter">
          <span aria-hidden="true" class="fab fa-x-twitter fa-md"></span>
          <span class="sr-only"><%=t("decidim.blogs.social_medias.twitter_share")%></span>
        </a>
        <a href="https://www.linkedin.com/shareArticle?mini=true&amp;url=<%= request.original_url %>&amp;title=Not%C3%ADcias" title="LinkedIn">
          <span aria-hidden="true" class="fab fa-linkedin-in fa-md"></span>
          <span class="sr-only"><%=t("decidim.blogs.social_medias.LinkedIn_share")%></span>
        </a>
        <a href="https://api.whatsapp.com/send?text=<%= request.original_url %>" title="WhatsApp" class="link-whatsapp">
          <span aria-hidden="true" class="fab fa-whatsapp fa-md"></span>
          <span class="sr-only"><%=t("decidim.blogs.social_medias.whatssap_share")%></span>
        </a>
        <input id="urlShareLink" class="input-group-field display-none" type="text" value="<%= "#{request.original_url}" %>" readonly>
        <button class="button copy-link-button"
              data-clipboard-copy="#urlShareLink"
              data-clipboard-copy-label="✓"
              data-clipboard-copy-message="✓"
              aria-label="ta"
              id="copy-proposal-link-button"
              >
          <i class="fas fa-link fa-md" aria-hidden="true"></i>
        </button>
      </div>
    </div>