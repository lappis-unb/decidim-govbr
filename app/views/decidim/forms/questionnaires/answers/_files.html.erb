<%= answer_form.file_field :add_documents, label: false, multiple: true, id: field_id, disabled: disabled, style: "display: none;" %>
<label for="<%= field_id %>" class="button small add-file add-questionnaire-file" id="file-label-<%= field_id %>">Clique para adicionar arquivos</label>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var fileInput = document.getElementById("<%= field_id %>");
    var fileLabel = document.getElementById("file-label-<%= field_id %>");

    fileInput.addEventListener("change", function() {
      var fileName = fileInput.files.length > 1 ? fileInput.files.length + ' arquivos selecionados' : fileInput.files[0].name;
      fileLabel.textContent = fileName;
    });
  });
</script>