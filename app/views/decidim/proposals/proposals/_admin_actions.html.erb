<% if current_user %>
  <% if current_user.admin? %>
    <div class="proposals-actions-admin">
      <%= render partial: "decidim/govbr/exports/most_voted_button" %>
      <%= render partial: 'decidim/govbr/exports/dropdown', locals: { component: current_component, resource_id: nil, is_comments: true} %>
      <%= render partial: 'decidim/govbr/exports/dropdown', locals: { component: current_component, resource_id: nil, is_comments: false} %>
      <%= link_to raw("<i class='fas fa-edit' aria-hidden='true'></i> ") + t("decidim.modal.component_edit"),
                send(mounted_admin_engine).edit_component_path(current_participatory_space, current_component),
                class: "br-button secondary black-and-white-btn" %>
      <%= render partial: "decidim/shared/export_modal" %>
      <!--<%= render partial: "statistics_small_view", locals: {statistics: @user_proposals_statistic} %>-->
    </div>
    <% if browser.mobile? %>
      <span class="br-divider my-2"></span>
    <% end %>
  <% end %>
<% end %>