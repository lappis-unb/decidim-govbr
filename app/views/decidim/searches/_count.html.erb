
<div class="search-result-section">
  <h1>"<%= term %>"</h1>

  <div>
    <span><%= @results_count %></span>
    <p>
      <%= t("decidim.search.results_for_term") %>
      <strong><%= t("decidim.search.platform") %></strong>
    </p>
  </div>
</div>

<div class="searches-input">
  <%= form_tag(decidim.search_path, method: :get) do %>
    <div class="input-group">
      <%= label_tag "input-search" do %>
        <%= text_field_tag(
          :term,
          nil,
          class: "input-group-field",
          id: "input-search",
          value: params[:term] || params.dig(:filter, :term),
          placeholder: t("decidim.search.term_input_placeholder"),
          title: t("decidim.search.term_input_placeholder")
        ) %>
      <% end %>
      <div class="input-group-button">
        <button type="submit" class="button">
          <%= icon "magnifying-glass", aria_label: t("decidim.search.term_input_placeholder"), role: "img" %>
        </button>
      </div>
    </div>
  <% end %>
</div>
